{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "examples"
  ]
}
